<% page = {
	'title' : 'Frontier Journeyman',
	'key': 'Frontier Journeyman!!!'
} %>
<%- include ../partials/globaljs %>
<% assets = {
	'css' : [ 'frontier/journeyman.css' ],
	'js' : 	[ 'frontier/angularDemo.js' ]
} %>

<div id="main" ng-app="demoApp">
  <header>
	  <h1>Angular Demo</h1>
		<hr/>
  </header>

	<!-- Angular Requirement -->
	<article id="angular-directive">

		<div ng-controller="SimpleController">

			Name:
			<br/>
			<input type="text" ng-model="name" />
			<br/>

			<ul>
				<li ng-repeat="cust in customers | filter:name">
					{{ cust.name | uppercase }} - {{ cust.city | lowercase }}
				</li>
			</ul>

		</div>

	</article>


</div>